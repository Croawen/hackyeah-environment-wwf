{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es2016", "esnext.asynciterable"],
    "rootDir": "src",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2016",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "resolveJsonModule": true
  },
  "files": ["src/index.ts"],
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
